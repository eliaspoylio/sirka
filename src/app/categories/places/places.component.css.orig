.filter {
  margin: 2%;
  background: rgb(93, 232, 148);
  background: linear-gradient(
    185deg,
    rgba(190, 250, 247, 0.675) 12%,
    rgb(40, 169, 172) 79%
  );

  box-shadow: 9px 8px 42px -14px rgba(0, 0, 0, 0.58);
  -webkit-box-shadow: 9px 8px 42px -14px rgba(0, 0, 0, 0.58);
  -moz-box-shadow: 9px 8px 42px -14px rgba(0, 0, 0, 0.58);
}

.box a {
  text-decoration: none;
}

.box p {
  color: #ffffff;
  font-weight: bold;
  text-align: center;
  text-transform: uppercase;
  text-decoration: none;
  padding-top: 40%;
  font-size: 1rem;
}

.box {
  margin: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  padding: 0;
}

.box1, .box3 {
  height: 200px;
  width: 100%;
  background: transparent;

  box-shadow: 9px 8px 42px -14px rgba(0, 0, 0, 0.58);
  -webkit-box-shadow: 9px 8px 42px -14px rgba(0, 0, 0, 0.58);
  -moz-box-shadow: 9px 8px 42px -14px rgba(0, 0, 0, 0.58);
}

.box2 {
  height: 200px;
  background: transparent;
  width: 100%;
}

:hover.box1, :hover.box2, :hover.box3 {
  background-color: #6dc4cf;
}

h1 {
  font-size: 2.5rem;
  font-weight: 700;
  text-align: center;
  padding: 30px;
  margin-top: 25px;
  color: #fff;
}

h2 {
  margin-top: 2rem;
  padding-bottom: 1rem;
}

/* map section */
.nearby {
  margin: 2% 5%;
}

